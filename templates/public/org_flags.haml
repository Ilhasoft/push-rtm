.welcome-flags-global
  - if is_iorg
    - for site in linked_orgs
      %a.footer-orgs-name(href="{{ site.host }}")
        {{ site.name }}
  -else
    - for site in linked_orgs
      %a.flag(href="{{ site.host }}")
        - if site.is_static
          %img(src="{{ STATIC_URL }}img/flags/{{ site.flag }}" width="70px")
        - else
          %img(src="{{ site.flag }}" width="70px")
