  :css
    @font-face {
      font-family: SharpSansDisplayBold;
      src: url('{{ STATIC_URL }}fonts/SharpSansDispNo1-Bold.woff2') format("woff2"),
           url('{{ STATIC_URL }}fonts/SharpSansDispNo1-Bold.woff') format("woff");
