%body.pattern-bg
  -block body-content
    #fb-root
    -if org|config:"facebook_page_id" and org|config:"facebook_app_id"
      <script>
        window.fbAsyncInit = function() {
          FB.init({
            appId      : '{{ org|config:"facebook_app_id" }}',
            autoLogAppEvents: true,
            xfbml      : true,
            version    : 'v3.2'
          });
        };
      </script>

      <div class="fb-customerchat"
        page_id="{{ org|config:"facebook_page_id" }}"
        logged_in_greeting="{{ org|config:"facebook_welcome_text"|default:"Hi! Welcome to U-Report, chat to register and start speaking out today!" }}"
        logged_out_greeting="{{ org|config:"facebook_welcome_text"|default:"Hi! Welcome to U-Report, chat to register and start speaking out today!" }}">
      </div>

    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/{{ org_lang }}/sdk/xfbml.customerchat.js{% if not org|config:'facebook_page_id' or not org|config:'facebook_app_id' %}#xfbml=1&autoLogAppEvents=1&version=v3.2{% endif %}";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    </script>
    %section.uk-section.uk-padding-remove#ureport-top-black(style="background:#000;height:14px")
  
    .uk-width-auto.uk-margin-bottom.countries-overlay(uk-drop="mode: click; toggle:#select-country; offset: 100; pos:bottom-justify; boundary: #ureport-top-black; boundary-align:true; animation: uk-animation-slide-top-medium; duration: 500" style="display: none;")
      .uk-card.uk-card-body.uk-card-default
        .(uk-grid)
          .uk-width-1-1.uk-display-block
            %button.uk-float-right.uk-drop-close(type="button" uk-close)
        .(uk-grid)
          .main-logo.uk-width-1-4
            {% thumbnail org.logo "250x100" format="PNG" as im %}
            %img.logo(src="{{ STATIC_URL }}img/place_countries_logo.png" alt="{{ org.name }}" style="border: 1px solid green;")
            {% endthumbnail %}
          .uk-width-3-4
            .uk-flex(uk-grid)
              - if is_iorg
                - for site in linked_orgs
                  .
                    %a.footer-orgs-name{ href:"{{ site.host }}" }
                      {{ site.name }}
              -else
                - for site in linked_orgs
                  .
                    %a.flag{ href:"{{ site.host }}" }
                      - if site.is_static
                         %img{ src:"{{ STATIC_URL }}img/flags/{{ site.flag }}" }
                       - else
                          %img{ src:"{{ STATIC_URL }}img/flags/flag_ar.png" }
                      -#   %img{ src:"{{ site.flag }}" }
    %section#ureport-public-navbar-top-section.uk-section.uk-padding-remove-vertical
      -block navbar
        %nav#public-other-header-navbar.uk-navbar-container(uk-navbar)
          .uk-navbar-left
            .uk-navbar-item.header-countries-nav#select-country
              .
                %span(uk-icon="icon: world")
                %span(uk-icon="icon: chevron-up")
                %span
                  - trans "SELECT YOUR COUNTRY"

          .uk-navbar-right
            %ul.uk-navbar-nav.pages-navbar
              %li
                %a(href="{% url 'v2.public.ureporters' %}") 
                  - trans "Engagement"
              %li
                %a(href="{% url 'v2.public.about' %}") 
                  - trans "About"
            
              - if org|config:"has_jobs"
                %li
                  %a(href="{% url 'v2.public.jobs' %}")
                    - trans "Jobs"
              - for custom_page in additional_menu|slice:":3"
                %li
                  %a(href="{% url 'v2.public.custom_page' custom_page.link %}")
                    {{custom_page.title}}
              %li
                %a(href="" uk-icon="icon: facebook")
              %li
                %a(href="" uk-icon="icon: twitter")
              %li
                %a(href="{% url 'v2.public.join' %}") 
                  .uk-button.uk-button-secondary
                    - trans "Join Now"


        %nav#public-main-header-navbar.uk-navbar-container(uk-navbar style="border-bottom: 1px solid black;")
          .uk-navbar-center
            .uk-navbar-center-left.uk-margin-xlarge-right
              .uk-navbar-item.main-link
                %a(href="{% url 'v2.public.opinions' %}")
                  - trans "Opinions"

            %a.uk-navbar-item.uk-logo(href="{% url 'v2.public.index' %}") 
              {% thumbnail org.logo "230x86" format="PNG" as im %}
              %img.logo{ src:"{{ im.url }}", alt:"{{ org.name }}"}
              {% endthumbnail %}
            .uk-navbar-center-right.uk-margin-xlarge-left
              .uk-navbar-item.main-link
                %a(href="{% url 'v2.public.stories' %}")
                  - trans "Stories"

    %section.section.is-paddingless.is-marginless
      - block content
        #ureport-public-content
          .container.has-text-centered.is-size-1
            %h1
              - trans "Site page under construction"

          .container.has-text-centered.is-text-1(style="margin: 5rem;")
            %a.button(href="/")
              - trans "Go back to main public site"

    %section#ureport-public-footer.uk-section.uk-padding-remove
        -block pre-footer
          #pre-footer
            .(uk-grid)
              - for story in main_stories|slice:"4"
                - if not forloop.first
                  .(class="uk-width-1-3@s")
                    .(uk-grid)
                      .uk-width-1-1
                        <img width="100%" src="{{ STATIC_URL }}img/missing_image_placeholder.jpg" />
                      .uk-width-1-1.main-story-title.is-clipped
                        {{ story.title }}
                      .uk-width-1-1.main-story-button
                        %a.uk-button(href="{% url 'v2.public.story_read' story.pk %}")
                          - trans "READ MORE"
                          //&#8594;
              .(class="uk-visible@s uk-width-1-3@s")
                <img width="50%" src="{{ STATIC_URL }}img/big_u.png" />
              .(class="uk-width-2-3@s")
                .pre-footer-call-to-action
                  .call-to-action-text
                    This Section is a call to action to wrap up the content nad get involved

                  .call-to-action-button
                    %a.uk-button.uk-button-primary.uk-float-right(href="{% url 'v2.public.ureporters' %}")
                      -trans "EXPLORE ENGAGEMENT"

      %footer.footer.uk-padding-remove
        -block footer
          #ureport-footer-desktop(uk-grid)

            .uk-width-1-3.uk-child-width-expand(uk-grid)
              .footer-logo
                %a(href="{% url 'v2.public.index' %}") 
                  {% thumbnail org.logo "230x86" format="PNG" as im %}
                  %img.logo(src="{{ im.url }}" alt="{{ org.name }}" style="border: 1px solid green;")
                  {% endthumbnail %}
            .uk-width-1-3
            .uk-width-1-3.uk-float-right(uk-grid)
              .uk-width-1-6
              .uk-width-1-6
              .uk-width-1-6
              .uk-width-1-6
              .uk-width-1-6.uk-float-right
                %a(href="{% url 'v2.public.opinions' %}")
                  - trans "Opinions"
              .uk-width-1-6.uk-float-right
                %a(href="{% url 'v2.public.stories' %}")
                  - trans "Stories"
              .uk-width-1-6
              .uk-width-1-6
              .uk-width-1-6
              .uk-width-1-6
              .uk-width-1-6.uk-float-right
                %a(href="" uk-icon="icon: facebook")

              .uk-width-1-6.uk-float-left
                %a(href="" uk-icon="icon: twitter")                                    
            .uk-width-1-1.uk-child-width-auto(uk-grid)
                .
                  %a(href="{% url 'v2.public.about' %}")
                    - trans "About"
                .
                  %a(href="{% url 'v2.public.ureporters' %}")
                    - trans "Engagement"

                - if org|config:"has_jobs"
                  .
                    %a(href="{% url 'v2.public.jobs' %}")
                      - trans "Jobs"

                - for custom_page in additional_menu|slice:":3"
                  .
                    %a(href="{% url 'v2.public.custom_page' custom_page.link %}")
                      {{custom_page.title}}

                .uk-width-1-3(uk-grid)
                  .uk-width-1-6
                  .uk-width-1-6
                  .uk-width-1-6
                  .uk-width-1-6


    
    %section.uk-section.uk-padding-remove(style="background:#ff0;height:14px")
    %section.uk-section.uk-padding-remove(style="height:0px")
      .modal.export-modal(uk-modal)
        .modal-background
        .modal-content
         .uk-modal-dialog.uk-modal-body
          .export-modal-header(uk-grid)
            .column
              Export and Share
            .column
              .button.close.is-pulled-right.export-modal-close
                x
          .export-modal-progress(uk-grid)
            .column
              %progress.progress.is-small(max="100")
                15%
          .is-multiline.export-modal-content(uk-grid)
            .column.is-three-quarters
              Want to tell the world about this? Download this image to easily share on social media or for a beautiful presentation!
            .column.is-one-quarter
              %button.uk-button.is-black.is-pulled-right
                %a.screenshot-link(href="")
                  Download
            .column
              %img.screenshot-rendered(src="https://bulma.io/images/placeholders/200x960.png" alt="")

