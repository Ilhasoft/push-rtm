%head
  %meta(charset="utf-8")
  %title
    - block title
      - trans "U-Report"
    - block subtitle
      &nbsp;
  %meta(name="description" content="")
  %meta(name="author" content="")

  - if has_better_domain
    %meta(name="robots" content="noindex")
  
