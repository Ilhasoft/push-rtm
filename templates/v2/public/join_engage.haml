- extends "public_base_v2.html"

- load dashblocks thumbnail ureport i18n

-block content

  .bg-grid.border-t.p-home(class="md:flex")
    .flex-1.flex-center-y
      .text-5xl.font-bold
        -trans "Join Now"

    .flex-1.flex-center-y
      .text-xl.text-right(class="md:pl-12")
        -trans "In just a few easy steps, start here to join other young people and have your voice heard!"

  .p-home.bg-light1(class="md:flex")
    .flex-1
      .text-3xl.font-bold.flex.border-b.border-black.pb-4.mb-4
        .flex-none.flex-center-y
          .bg-circle.bg-black.text-white
            1
        .pl-4.pr-12.flex-center-y
          -trans "How would you like to join?"

    .flex-1.flex-center-y
      .text-xl.font-bold.flex.justify-around(class="md:pl-24 md:pr-12")
        {% if org|config:"shortcode" %}
        .mb-4.text-center(class="md:mx-4")
          %a(href='#text')
            .bg-circle.bg-white.text-black.border.border-black
              %i.fa.fa-comment
          .block
            -trans "Text"
        {% endif %}

        {% if org|config:"facebook_page_url" %}
        .mb-4.text-center(class="md:mx-4")
          %a(href='http://m.me/{{ org|config:"facebook_page_id" }}')
            .bg-circle.bg-white.text-black.border.border-black
              %i.fa.fa-facebook
          .block
            Facebook
        {% endif %}

        {% if org|config:"whatsapp_number" %}
        .mb-4.text-center(class="md:mx-4")
          %a(href='https://wa.me/{{ org|config:"whatsapp_number" }}')
            .bg-circle.bg-white.text-black.border.border-black
              %i.fa.fa-whatsapp
          .block
            WhatsApp
        {% endif %}

  %a(name="text")
    .p-home.bg-dark1.text-white(class="md:flex")
      .flex-1
        .text-3xl.font-bold.flex.border-b.border-white.pb-4.mb-4
          .flex-none.flex-center-y
            .bg-circle.bg-black.text-white
              2
          .pl-4.pr-12.flex-center-y
            -trans "Text"

      .flex-1.flex-center-y
        .text-xl(class="md:pl-24 md:pr-12")
          -trans "Text the word Join to 24453 - all U-Report SMSs are free!"

  .p-home.bg-dark2.text-white(class="md:flex")
    .flex-1
      .text-3xl.font-bold.flex.border-b.border-white.pb-4.mb-4
        .flex-none.flex-center-y
          .bg-circle.bg-black.text-white
            3
        .pl-4.pr-12.flex-center-y
          -trans "Sign-Up"

    .flex-1.flex-center-y
      .text-xl(class="md:pl-24 md:pr-12")
        -trans "We will then send you a few questions via SMS to complete sign-up so we can learn a little about you to better listen to your voice."

  .p-home.bg-dark3.text-white(class="md:flex")
    .flex-1
      .text-3xl.font-bold.flex.border-b.border-white.pb-4.mb-4
        .flex-none.flex-center-y
          .bg-circle.bg-black.text-white
            4
        .pl-4.pr-12.flex-center-y
          -trans "Get Involved!"

    .flex-1.flex-center-y
      .text-xl(class="md:pl-24 md:pr-12")
        -trans "You will now receive messages asking your opinion on meaningful issues!"

        %br
        %br
        -trans "To exit U-Report just send stop to 24453"