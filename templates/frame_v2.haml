    }

    @font-face {
      font-family: SharpSansDisplayMedium;
      src: url('{{ STATIC_URL }}fonts/SharpSansDispNo1-Medium.woff2') format("woff2"),
           url('{{ STATIC_URL }}fonts/SharpSansDispNo1-Medium.woff') format("woff");
    }

    @font-face {
      font-family: SharpSansDisplayMediumItalic;
