- extends "public_base_v2.html"
- load thumbnail compress i18n ureport

-block content
  .block(class="md:flex")
    .block.bg-dark-blue.vertical-angle
      .p-home.text-white.flex-center-y
        .block
          .text-light1.font-bold
            STORY
          .font-alt.font-bold.text-4xl.leading-tight.italic
            {{ story.title }}

    .block(class="md:-ml-8")
      %img(src="{{ STATIC_URL }}img/missing_image_placeholder.jpg" width="100%" style="object-fit:cover;")

  .block.justify-between.bg-white.m-12(class="md:flex")
    .block
      .share
        %a.mb-2.bg-circle-xs.border.border-black.facebook-share(href="#" data-url="{% org_host_link %}{% url 'v2.public.story_read' story.pk %}")
          %i.fa.fa-facebook
        %a.mb-2.block.bg-circle-xs.border.border-black(href="https://twitter.com/intent/tweet?url={% org_host_link %}{% org_host_link %}{% url 'v2.public.story_read' story.pk %}")
          %i.fa.fa-twitter
        %a.mb-2.block.bg-circle-xs.border.border-black(href="https://api.whatsapp.com/send?text={% org_host_link %}{% org_host_link %}{% url 'v2.public.story_read' story.pk %}")
          %i.fa.fa-whatsapp
        %a.mb-2.block.bg-circle-xs.border.border-black(href="mailto:?subject=Check out {{ story.title|urlencode:\"\" }} results&amp;body={% url 'v2.public.story_read' story.pk %}" uk-icon="icon: mail; ratio: 1.5")
          %i.fa.fa-envelope

    .block.flex-grow.px-home
      {{ story.content|safe }}

    .block
      %img(src="{{STATIC_URL}}img/u-icon-small.png")

  .story-comments
    .fb-comments(data-href="{% org_host_link %}{% url 'public.story_read' story.pk %}" data-width="100%" data-numposts="5")