%body.pattern-bg
  -block body-content
    #fb-root
    -if org|config:"facebook_page_id" and org|config:"facebook_app_id"
      <script>
        window.fbAsyncInit = function() {
          FB.init({
            appId      : '{{ org|config:"facebook_app_id" }}',
            autoLogAppEvents: true,
            xfbml      : true,
            version    : 'v3.2'
          });
        };
      </script>

      <div class="fb-customerchat"
        page_id="{{ org|config:"facebook_page_id" }}"
        logged_in_greeting="{{ org|config:"facebook_welcome_text"|default:"Hi! Welcome to U-Report, chat to register and start speaking out today!" }}"
        logged_out_greeting="{{ org|config:"facebook_welcome_text"|default:"Hi! Welcome to U-Report, chat to register and start speaking out today!" }}">
      </div>

    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/{{ org_lang }}/sdk/xfbml.customerchat.js{% if not org|config:'facebook_page_id' or not org|config:'facebook_app_id' %}#xfbml=1&autoLogAppEvents=1&version=v3.2{% endif %}";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    </script>
    %section.section.is-paddingless(style="background:#000;height:15px")

    %section#ureport-public-header.section
      - block navbar
          %nav(role="navigation"  aria-label="main navigation")
            .navbar-brand.is-hidden-tablet
              .navbar-item
                {% thumbnail org.logo "230x86" format="PNG" as im %}
                %img.logo(src="{{ im.url }}" alt="{{ org.name }}")
                {% endthumbnail %}
  
              %a.navbar-burger(role="button" aria-label="menu" aria-expanded="false" data-target="mobileNavbar")
                %span(aria-hidden="true")
                %span(aria-hidden="true")
                %span(aria-hidden="true")
  
            #mobileNavbar.navbar-menu.is-hidden-tablet
              .navbar-start
                .navbar-item.has-text-weight-semibold.is-size-3
                  .link
                    - trans "Opinions"
                .navbar-item.has-text-weight-semibold.is-size-3
                  .link
                    - trans "Stories"
              .navbar-end
                .navbar-item.header-small-nav
                  - trans "About"

                .navbar-item.header-small-nav
                  - trans "Engage"                

                .navbar-item.header-small-nav
                  - trans "U-Reporters"

                .navbar-item.header-small-nav
                  - trans "FAQ"  

                .navbar-item.header-social-media-mobile
                  .icon
                    %i.fab.fa-facebook-f

                  .icon
                    %i.fab.fa-twitter
                .navbar-item.header-search-mobile
                  .icon
                    %i.fas.fa-search
                  - trans "Search"

            .navbar-menu.is-hidden-mobile
              .navbar-start
                .navbar-item.header-countries-nav
                  .icon
                    %i.fas.fa-globe-africa
                  .icon
                    %i.fas.fa-chevron-circle-up
                  .
                    - trans "SELECT YOUR COUNTRY"

  
              .navbar-end
                .navbar-item.header-small-nav
                  %a(href="{% url 'v2.public.about' %}") 
                    - trans "About"

                .navbar-item.header-small-nav
                  %a(href="{% url 'v2.public.ureporters' %}") 
                    - trans "U-Reporters"

                .navbar-item.header-small-nav
                  %a(href="{% url 'v2.public.added' %}") 
                    - trans "FAQ"  

                .navbar-item.header-small-nav
                  %span.icon
                    %i.fas.fa-search
                  - trans "Search"

                .navbar-item.header-small-nav.header-social-media
                  %span.icon
                    %i.fab.fa-facebook-f
                .navbar-item.header-small-nav.header-social-media
                  %span.icon
                    %i.fab.fa-twitter

                .navbar-item.header-small-nav
                  .icon.is-large.is-size-3.is-marginless
                    %i.fas.fa-language

                .navbar-item.header-small-nav
                  .engage-call-to-action.button.is-outlined.is-primary
                    %a(href="{% url 'v2.public.join' %}") 
                      - trans "Join Now"

  
          %nav.header-big-nav.columns.is-hidden-mobile.is-marginless(role="navigation" aria-label="main navigation" style="border-bottom: 1px solid black;")
            .column.has-text-centered
              .link
                %a(href="{% url 'v2.public.opinions' %}")
                  - trans "Opinions"
  
            .column.has-text-centered
              %a(href="{% url 'v2.public.index' %}") 
                {% thumbnail org.logo "230x86" format="PNG" as im %}
                %img.logo{ src:"{{ im.url }}", alt:"{{ org.name }}"}
                {% endthumbnail %}
  
            .column.has-text-centered
              .link
                %a(href="{% url 'v2.public.stories' %}")
                  - trans "Stories"
  

    
    %section.section.is-paddingless.is-marginless
      - block content
        #ureport-public-content
          .container.has-text-centered.is-size-1
            %h1
              - trans "Site page under construction"
  
          .container.has-text-centered.is-text-1(style="margin: 5rem;")
            %a.button(href="/")
              - trans "Go back to main public site"
    
    %section#ureport-public-footer.section.is-paddingless.is-marginless
        -block pre-footer
          .columns.is-multiline#pre-footer.is-hidden-touch
            .column.is-full
              .columns.is-multiline.is-centered.is-8.is-variable
                - for story in main_stories|slice:"4"
                  - if not forloop.first
                    .column
                      .columns.is-multiline
                        .column.is-full
                          <img width="100%" src="{{ STATIC_URL }}img/missing_image_placeholder.jpg" />
                        .column.is-full.main-story-title.is-clipped
                          {{ story.title }}
                        .column.is-full.main-story-button
                          %a.is-inline.button.is-radiusless(href="{% url 'public.story_read' story.pk %}")
                            - trans "READ MORE"
                            //&#8594;
            .column.is-full
              .columns.is-vcentered
                .column.is-half
                  <img width="50%" src="{{ STATIC_URL }}img/big_u.png" />
                .column.is-half.pre-footer-call-to-action
                  .call-to-action-text
                    This Section is a call to action to wrap up the content nad get involved
      
                  .call-to-action-button
                    .button.is-radiusless.is-primary.is-pulled-right
                      ACTION

      %footer.footer.is-paddingless
        -block footer
            .columns.is-hidden-tablet#ureport-footer-mobile
              .column.is-full
                .footer-mobile-logo
                  {% thumbnail org.logo "230x86" format="PNG" as im %}
                  %img.logo(src="{{ im.url }}" alt="{{ org.name }}" style="border: 1px solid green;")
                  {% endthumbnail %}
              .column.is-full
                .columns.is-mobile
                  .column.is-two-fifths.footer-small-nav
                    .columns
                      .column
                        - trans "About"
                      .column
                        - trans "Engage"
                      .column
                        - trans "Reporters"
                      .column
                        - trans "FAQ"

                  .column.is-three-fifths
                    .columns
                      .column
                        .columns.is-mobile.footer-big-nav
                          .column.is-half
                            .link
                              - trans "Opinions"
                          .column.is-half
                            .link
                              - trans "Stories"
                      .column
                        .columns.is-mobile.footer-extra-nav
                          .column.is-half
                            %span.icon
                              %i.fas.fa-search
                            - trans "Search"

                          .column.footer-social-media
                            %span.icon
                              %i.fab.fa-facebook-f
                          .column.footer-social-media
                            %span.icon
                              %i.fab.fa-twitter


            .columns.is-hidden-mobile#ureport-footer-desktop
              .column.is-three-fifths
                .columns
                  .column.is-full
                    .footer-logo
                      %a(href="{% url 'v2.public.index' %}") 
                        {% thumbnail org.logo "230x86" format="PNG" as im %}
                        %img.logo(src="{{ im.url }}" alt="{{ org.name }}" style="border: 1px solid green;")
                        {% endthumbnail %}
                .columns.footer-small-nav
                  .column
                    %a(href="{% url 'v2.public.about' %}")
                      - trans "About"
                  .column
                    %a(href="{% url 'v2.public.join' %}")
                      - trans "Engage"
                  .column
                    %a(href="{% url 'v2.public.ureporters' %}")
                      - trans "U-Reporters"
                  .column
                    %a(href="{% url 'v2.public.added' %}")
                      - trans "FAQ"

              .column.is-two-fifths
                .columns.footer-big-nav
                  .column.is-two-fifths.is-offset-2
                    .link.is-pulled-right
                      %a(href="{% url 'v2.public.opinions' %}")
                        - trans "Opinions"
                  .column.is-two-fifths
                    .link.is-pulled-right
                      %a(href="{% url 'v2.public.stories' %}")
                        - trans "Stories"
                .columns.footer-countries-nav
                  .column.is-pulled-right
                    .icon
                      %i.fas.fa-globe-africa
                    .icon
                      %i.fas.fa-chevron-circle-up
                    .is-inline
                      -trans "SELECT YOUR COUNTRY"
                .columns.footer-extra-nav
                  .column
                    .is-pulled-right
                      - trans "Search"
                    .icon.is-pulled-right
                      %i.fas.fa-search
                  .column.is-1.is-offset-1.is-pulled-right.footer-social-media
                    %span.icon.is-pulled-right
                      %i.fab.fa-facebook-f
                  .column.is-1.is-pulled-right.footer-social-media
                    %span.icon.is-pulled-right
                      %i.fab.fa-twitter
  

    %section.section.is-paddingless.is-marginless(style="background:#ff0;height:15px")

