- extends "frame_v2.html"

- load smartmin i18n thumbnail

-block body-content
  %section.section.is-paddingless.is-marginless
    .container
      .level.is-marginless.has-background-black(style="height:15px")

    -block navbar
      .container(style="padding: 20px 80px 20px 80px;")
        .level
          .level-left
            .level-item
              .icon
                %i.fas.fa-arrow-circle-left
              Back to Full Site
      .container.has-background-dark.has-text-white(style="padding: 40px 80px 0px 80px;")
        .level.is-large(style="border-bottom: 1px solid white; padding-bottom: 40px;")
          .level-left
            .level-item
              {% thumbnail org.logo "230x86" format="PNG" as im %}
              %img.logo(src="{{ im.url }}" alt="{{ org.name }}" style="border: 1px solid green;")
              {% endthumbnail %}
            .level-item
              %div
                %p.is-size-5
                  Welcome Sophie
                %p.has-text-weight-bold.is-size-2.has-text-centered
                  Dashboard
          .level-right
            .level-item.is-size-5
              Email
            .level-item.is-size-5.button.is-outlined.has-text-white.has-background-dark
              Logout

  %section.section.is-paddingless.is-marginless
    .container
      -block content-section
        .container.has-background-grey
            .columns.is-marginless
              .column.is-one-fifth.block.has-background-info.is-marginless(style="padding: 3rem 10px;")
                -block menu
                  %aside.menu
                    %ul.menu-list
                      %li
                        %a
                          %span.icon
                            .fas.fa-comments
                          Polls
                      %li
                        %a
                          %span.icon
                            .fas.fa-edit
                          Stories
                      %li
                        %a
                          %span.icon
                            .fas.fa-user
                          Users
                      %li
                        %a
                          %span.icon
                            .fas.fa-cog
                          Settings
                      %li
                        %a
                          %span.icon
                            .fas.fa-file-alt
                          Pages
                      %li
                        %a
                          %span.icon
                            .fas.fa-code-branch
                          RapidPro
                      %li
                        %a
                          %span.icon
                            .fas.fa-chart-area
                          Analytics

              .column.is-four-fifths.is-offset-one-.block
                -block content-div
                  .content-div(style="padding: 3rem 40px;")
                    -block content
   
  %section.section.is-paddingless.is-marginless
    %footer.footer.is-paddingless
      -block footer
        .container.has-background-black.has-text-white(style="padding: 80px;")
          .level.is-large(style="border-bottom: 1px solid white; padding-bottom: 40px;")
            .level-left
              {% thumbnail org.logo "230x86" format="PNG" as im %}
              %img.logo(src="{{ im.url }}" alt="{{ org.name }}" style="border: 1px solid green;")
              {% endthumbnail %}
            .level-right
              .level-item.has-text-weight-bold.is-size-2
                Polls
              .level-item.has-text-weight-bold.is-size-2
                Stories

          .level
            .level-left
              .level-item.is-size-6
                About
              .level-item.is-size-6
                Engage
              .level-item.is-size-6
                U-Reporters
              .level-item.is-size-6
                FAQ
              .level-item.button.is-size-6.is-outlined.has-background-black.has-text-white.is-primary
                Join Now

- block extra-style
  :css
    .menu-list a {
      border-bottom: 1px solid white;
      margin: 0px 10px;
      padding: 20px;
    }